#include <stdio.h>

void main()
{
    
    int a=10,b=20;
    int *p1,*p2;
    int sum;
    int mul,c,d;
    a
    p1=&a;
    p2=&b;
    
    sum=*p1+*p2;
    mul=sum * *p1;
    
    printf("Sum is = %d\n",sum);
    printf("Mul id = %d\n",mul);
    
    c=(*p1)++;
    
    d=(*p2)++;
    
    printf("c = %d\td = %d\n",c,d);
    printf("p1 = %d\tp2 = %d\n",*p1,*p2);
    
}
